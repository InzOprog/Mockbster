@model Mockbster.Models.LoginModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserData.Username" class="control-label"></label>
            <input asp-for="UserData.Username" class="form-control" name="username" type="text"/>
            <span asp-validation-for="UserData.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserData.Password" class="control-label"></label>
            <input asp-for="UserData.Password" class="form-control" name="password" type="password"/>
            <span asp-validation-for="UserData.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <span class="text-danger">@Html.DisplayFor(model => model.ErrorMessage)</span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
            <input type="button" value="Register" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Home")'" />
        </div>
    </form>
</div>
