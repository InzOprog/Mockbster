@model Mockbster.Models.UserPageModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table>
    <thead>
        <tr>
            <th>Details</th>
            <th>History</th>
        </tr>
        <tr>
            <th><hr /></th>
            <th><hr /></th>
        </tr>
    </thead>
    <tbody>
    @* Details *@
    <tr>
        <td>
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserData!.Username)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserData!.Firstname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserData!.Lastname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserData!.Lastname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserData!.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserData!.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserData!.Username)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserData!.Username)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserData!.Password)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserData!.Password)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.UserData?.Id">Edit</a> |
                <a asp-controller="MoviesUser" asp-action="Index">Back to Movies</a>
            </div>
        </td>
    @* History *@
        <td>
            <table>
                <thead>
                <tr>
                    <th>
                        Movie name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserHistory[0]!.Item2.PaidAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserHistory[0]!.Item2.OrderBegin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserHistory[0]!.Item2.OrderEnd)
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.UserHistory)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item!.Item1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item!.Item2.PaidAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item!.Item2.OrderBegin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item!.Item2.OrderEnd)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>